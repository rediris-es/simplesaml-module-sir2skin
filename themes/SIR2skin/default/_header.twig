        <div id="header">
            <div class="wrap">
                <div style="max-width:20%" class="left">
                    <div class="v-center logo-header">
                        <div>
                            <img src="/module.php/sir2skin/logo-transp.png" align="left" class="logo" valign="top" alt="SIR" height="60px">
                        </div>
                    </div>
                </div>
                <div style="max-width:60%" class="left title-desktop">
                    <div class="v-center logo-header">
                        <div>
                            <h1 class="pagetitle"><a style="text-decoration: none; color: #3d8e9c; font-weight: bold;" href="{{ baseurlpath }}">{{ pagetitle }}</a></h1>
                        </div>
                    </div>
                </div>
                {% if sir.idpinstaller != true %}
                    <div style="max-width:20%" class="right">
                        <a href="#main-menu" data-target="main-menu" id="menuLinkBar" class="menu-link hide-for-large">
                            <span class="fa fa-bars fa-2x" aria-hidden="true"></span>
                        </a>
                    </div>          
                {% endif %}
                {% if not hideLanguageBar -%}
                    <div style="max-width:20%" class="right">
                        <a href="#menu" id="menuLink" data-target="menu" class="menu-link hide-for-large">
                            <span class="fa fa-language fa-2x" aria-hidden="true"></span>
                        </a>
                    </div>
                {% endif %}
                <div style="max-width:20%" class="right show-for-large">
                    <div class="v-center language-bar">
                        <form id="SelectLang" class="pure-form" method="get">
                            {% if not hideLanguageBar -%}
                            <div id="languagebar">
                                {% for name, value in queryParams -%}
                                    {% if value -%}
                                    <input type="hidden" name="{{ name }}" value="{{ value }}" />
                                    {%- else -%}
                                    <input type="hidden" name="{{ name }}" />
                                    {%- endif -%}
                                {%- endfor %}

                                <select  class="pure-input-1-4 language-menu selectize" name="language" id="language_selector">
                                    {% for key, lang in languageBar -%}
                                        {% if key == currentLanguage -%}
                                        <option value="{{ key }}" selected="selected">&#xf1ab;  {{ lang.name }}</option>
                                        {% else -%}
                                        <option value="{{ key }}">{{ lang.name }}</option>
                                        {% endif -%}
                                    {% endfor -%}
                                </select>
                            </div>
                        {% endif -%}
                        </form>
                    </div> <!--language-bar-->
                    
                </div><!--show-for-large-->
            </div> <!-- wrap -->
        </div> <!-- header -->

